---
import Parser from "rss-parser";

import Layout from "../layouts/Layout.astro";
import ListRow from "../components/ListRow.astro";

function nonNullable<T>(value: T): value is NonNullable<T> {
    return value !== null && value !== undefined;
}

const now = new Date().toLocaleDateString();

const parser = new Parser();

const list = (
    await Promise.allSettled(
        [
            "https://www.smashingmagazine.com/feed/",
            "https://developer.mozilla.org/en-US/blog/rss.xml",
            "https://hnrss.org/newest",
        ].map(async (src) => {
            try {
                const feed = await parser.parseURL(src);
                return feed.items.map((i) => ({
                    feed: feed.title,
                    title: i.title,
                    href: i.link,
                    date: i.pubDate ? new Date(i.pubDate) : undefined,
                }));
            } catch (error) {
                console.error("Error fetching feed", error);
            }
        })
    )
)
    .filter((r) => r.status === "fulfilled")
    .flatMap((r) => r.value)
    .filter(nonNullable)
    .sort((a, b) => (b.date ?? new Date()).getTime() - (a.date ?? new Date()).getTime());
---

<Layout title="rss">
    <main>
        <h1>
            Latest
            <time>{now}</time>
        </h1>
        <ul>
            {list.map((item) => <ListRow {...item} />)}
        </ul>
    </main>
</Layout>

<style>
    main {
        padding: 2rem;
        color: white;
    }
    h1 {
        margin-bottom: 1rem;
        color: var(--text);
    }
    time {
        font-size: 1rem;
        color: var(--text-secondary);
    }
    ul {
        display: flex;
        flex-direction: column;
        row-gap: 1.5rem;
        padding: 0;
    }
</style>
